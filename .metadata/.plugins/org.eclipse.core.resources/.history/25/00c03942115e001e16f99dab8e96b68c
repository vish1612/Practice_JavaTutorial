package JavaInterviePrograms;

public class ToCheckPallindromNum {

	public static void IsNumPallindrom(int num) {
		int rev = 0, sum = 0;
		int temp = 0;

		while (num > 0) {
			rev = num % 10;
			sum = (sum * 10) + rev;
			temp = num / 10;
		}
		if(temp == num) {
			System.out.println("Given "+num+" is a Pallindrome Number");
		}
		else {
			System.out.println("Given "+num+" is not a Pallindrome Number");
		}
		
	}

	public static void main(String[] args) {

	}

}
